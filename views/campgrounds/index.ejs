<% layout("layout/boilerplate")%>
<h1>All Campgrounds</h1>
<div><a href="/campgrounds/new">Add Campground</a></div>
<ul>
    <%for (let campground of campgrounds){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%=campground.value%>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.value%></h5>
                        <p class="card-text"><%=campground.value%></p>
                        <p class="card-text">
                            <small class="text-muted"><%= campground.value%></small>
                        </p>
                        <a href="/campgrounds/<%=campground.value%>" class="btn btn-primary">View<%=campground.value%></a>
                    </div>
                </div>
            </div>
        </div>
    <%}%>
</ul>

